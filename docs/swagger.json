tyDetailsBody\"\n        },\n        \"responses\": {\n          \"201\": {\n            \"description\": \"Successful hosting of activity\",\n            \"content\": {\n              \"application/json\": {\n                \"schema\": {\n                  \"type\": \"object\",\n                  \"items\": {\n                    \"$ref\": \"#/components/schemas/Activity\"\n                  }\n                }\n              }\n            }\n          },\n          \"400\": {\n            \"description\": \"Invalid date given by the user\"\n          },\n          \"404\": {\n            \"description\": \"A user with this userId was not found\"\n          }\n        }\n      }\n    },\n    \"/users/{userId}/activities/{activityId}/details\": {\n      \"get\": {\n        \"summary\": \"Retrieval of the details of a chosen activity\",\n        \"description\": \"FR 4 - The user must be able to view the details of an upcoming activity.\\n\",\n        \"parameters\": [\n          {\n            \"$ref\": \"#/components/parameters/userId\"\n          },\n          {\n            \"$ref\": \"#/components/parameters/activityId\"\n          }\n        ],\n        \"responses\": {\n          \"200\": {\n            \"description\": \"The details of the chosen activity are retrieved successfully\",\n            \"content\": {\n              \"application/json\": {\n                \"schema\": {\n                  \"type\": \"object\",\n                  \"items\": {\n                    \"$ref\": \"#/components/schemas/ActivityDetails\"\n                  }\n                }\n              }\n            }\n          },\n          \"404\": {\n            \"description\": \"A user with given userId or an activity with given activityId were not found\"\n          }\n        }\n      },\n      \"put\": {\n        \"summary\": \"Editing of the details of an activity the user is hosting\",\n        \"description\": \"FR 19 - The user must be able to change the details of th